\cleardoublepage
\label{sec:glossary}
\printnoidxglossary[title={Glossary}]


% Reset chapter/section marks after the glossary
\cleardoublepage
\markboth{}{} % Clear the header
\pagestyle{mainchapterstyle} % Reapply the main chapter style

\cleardoublepage

